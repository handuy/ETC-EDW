<% include partials/header %>

<div class = "container">
    <div class = "row">
        <h1 style = "text-align: center;"> Chia sẻ kỷ niệm của bạn </h1>
        <div style = "width: 40%; margin: 40px auto;">
            <form action = "/camp" enctype="multipart/form-data" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "name" 
                    placeholder = "chỗ này điền tiêu đề của kỷ niệm bạn muốn chia sẻ">
                </div>
                
                <div class = "form-group">
                    <textarea class = "form-control" name = "description"
                    placeholder = "còn chỗ này để chia sẻ câu chuyện của bạn"></textarea>
                </div>
                
                <div class = "form-group">
                    <input class = "form-control" type = "file" name = "image" 
                    formenctype="multipart/form-data" placeholder = "chỗ này để upload ảnh">
                </div>                
                
                <div class = "form-group">
                    <button class = "btn btn-lg btn-info btn-block"> Submit </button>
                </div>
            </form>
        </div>
    </div>
</div>

