<% include partials/header %>

<div class = "container">
    <div class = "row">
        <h1 style = "text-align: center;"> Edit: <%= foundCamp.name %> </h1>
        <div style = "width: 40%; margin: 40px auto;">
            <form action = "/camp/<%= foundCamp._id %>?_method=PUT" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "camp[name]" 
                    value = "<%= foundCamp.name %>">
                </div>
                
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "camp[image]" 
                    value = "<%= foundCamp.imageUrl %>">
                </div>
                
                <div class = "form-group">
                    <textarea class = "form-control" type = "text" name = "camp[description]" 
                    value = "<%= foundCamp.description %>"></textarea>
                </div>
                
                <div class = "form-group">
                    <button class = "btn btn-lg btn-info btn-block"> Edit </button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>